<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>画像</th>
    <th>コメント</th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%= image_tag(feed.image.url) %></td>
    <td><%= feed.content %></td>
    <td><%= feed.user.name %></td>
    <td><%= link_to "ブログを編集する", edit_feed_path(feed.id),data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', feed_path(feed.id), method: :delete ,data: { confirm: '本当に編集していいですか？' } %></td>

    

    <% unless @feed.user_id == current_user.id %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>


  </tr>
<% end %>

<%= link_to '新しくブログを投稿する', new_feed_path %>

</table>