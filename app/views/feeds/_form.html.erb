<%= form_with(model: @feed, local: true, url: confirm_feeds_path ) do |form| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= @feed.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @feed.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <!-- 確認画面から新規作成画面に戻った時に、 -->
    <!-- アップロードした画像を表示させるための記述 -->
    <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>



  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :feed_content %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>

<%= link_to "ブログ一覧画面にもどる", feeds_path %>